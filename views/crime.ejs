<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css">


    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"/>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>

<style>
    #map{
            height: 75vh;
            width: 152vh;
            position: fixed;
            border-radius: 10px;
            margin-left: 20vh;
        }  
</style>

</head>
<body>

    <!-- <%- include('partials/test') %> -->
    <%- include('style') %>

    <% if (crime.length > 0) {%>
        <caption>Crime Info</caption>
        <table 
            data-toggle="table"
            class="table table-hovered" 
            id="crimes_table"
        >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">FBICode</th>
                    <th scope="col">Type</th>
                    <th scope="col">Date</th>
                    <th scope="col">Description</th>
                    <th scope="col">Domestic</th>
                    <th scope="col">Arrest</th>
                </tr>
            </thead>
            <tbody>
                <% crime.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><a href="/crime?id=<%= row.crimeID%>"><%= row.crimeID %></td>
                        <td align = "center"><%= row.FBICode %></td>
                        <td align = "center"><%= row.type %></td>
                        <td align = "center"><%= row.Date %></td>
                        <td align = "center"><%= row.description %></td>
                        <td align = "center"><%= row.domestic %></td>
                        <td align = "center"><%= row.arrest %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No crimes found. Go <a href="/add" >here</a> to add a crime.</p>
    <% } %>

    <br>
    <br>
    <%- include('criminal.ejs' , {data : data});%> 
    
    


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script> -->

    <div id="map"></div>
    <div id="mydiv" data-test=<%= location %> > </div>
</body>
<script>

    var myVar = <%- JSON.stringify(location) %>;


    console.log(myVar)

    $(function(){
    
        var map = L.map('map',{
            center: [41.8781, -87.6298],
            zoom: 10
        });
        
        L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
        L.marker([myVar[0].latitude, myVar[0].longitude]).addTo(map) 
            // .bindPopup(
            //     "Date: " + myVar.Date + "<br>" +
            //     "City Block: " + myVar[i].cityBlock + "<br>"
            // )
            // .openPopup();
    });
</script>
</html>

