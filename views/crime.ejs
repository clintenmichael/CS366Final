<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css">


    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"/>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>

<style>
    #map{
            height: 75vh;
            width: 152vh;
            position: relative;
            border-radius: 10px;
            margin-left: 20vh;
        }  
</style>

</head>
<body>

    
    <%- include('style') %>

    <% if (crime.length > 0) {%>
    <caption>Crime Info</caption>
        <table 
            data-toggle="table"
            class="table table-hovered" 
            id="crimes_table"
        >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">FBICode</th>
                    <th scope="col">Type</th>
                    <th scope="col">Date</th>
                    <th scope="col">Description</th>
                    <th scope="col">Domestic</th>
                    <th scope="col">Arrest</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><%= row.crimeID %></td>
                        <td align = "center"><%= row.FBICode %></td>
                        <td align = "center"><%= row.type %></td>
                        <td align = "center"><%= row.Date %></td>
                        <td align = "center"><%= row.description %></td>
                        <td align = "center"><%= row.domestic %></td>
                        <td align = "center"><%= row.arrest %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No crimes found. Go <a href="/add" >here</a> to add a crime.</p>
    <% } %>

    <br>
    <br>
    <caption>Criminal Info</caption>
        <table 
            data-toggle="table"
            class="table table-hovered" 
            id="crimes_table"
        >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">SSN</th>
                    <th scope="col">Race</th>
                    <th scope="col">Occupation</th>
                    <th scope="col">Address</th>
                    <th scope="col">State</th>
                    <th scope="col">City</th>
                    <th scope="col">Company</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><%= row.ID.toString().padStart(6, "0") %></td>
                        <td align = "center"><%= row.firstName %></td>
                        <td align = "center"><%= row.lastName %></td>
                        <td align = "center"><%= row.gender %></td>
                        <td align = "center"><%= row.ssn %></td>
                        <td align = "center"><%= row.race %></td>
                        <td align = "center"><%= row.occupation %></td>
                        <td align = "center"><%= row.address %></td>
                        <td align = "center"><%= row.state %></td>
                        <td align = "center"><%= row.city %></td>
                        <td align = "center"><%= row.company %></td>
                        <td align = "center"><%= row.email %></td>
                        <td align = "center"><%= row.phone %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <br>
    <br>

    <caption>Arresting Officer(s)</caption>
        <table 
            data-toggle="table"
            class="table table-hovered" 
            id="crimes_table"
        >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                <% officer.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><%= row.firstName %></td>
                        <td align = "center"><%= row.lastName %></td>
                        <td align = "center"><%= row.title %></td>
                        <td align = "center"><%= row.email %></td>
                        <td align = "center"><%= row.phone %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <br>
        <br>

        <caption>Case Info</caption>
        <table 
            data-toggle="table"
            class="table table-hovered" 
            id="crimes_table"
        >
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Crime ID</th>
                    <th scope="col">Case ID</th>
                    <th scope="col">Court Date</th>
                    <th scope="col">Room Number</th>
                    <th scope="col">Court Time</th>
                </tr>
            </thead>
            <tbody>
                <% cases.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><%= row.crimeID %></td>
                        <td align = "center"><%= row.caseID %></td>
                        <td align = "center"><%= row.courtDate %></td>
                        <td align = "center"><%= row.roomNumber %></td>
                        <td align = "center"><%= row.courtTime %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <br>
        <br>


    


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script> -->

    <div id="map"></div>
    <div id="mydiv" data-test=<%= location %> > </div>
</body>
