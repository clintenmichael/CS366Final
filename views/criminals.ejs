<div class="table-wrapper">
    <% if (data.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">SSN</th>
                    <th scope="col">Race</th>
                    <th scope="col">Occupation</th>
                    <th scope="col">Address</th>
                    <th scope="col">State</th>
                    <th scope="col">City</th>
                    <th scope="col">Company</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((row, index) => { %>
                    <tr>
                        <td align = "center"><a href="/criminal?id=<%= row.ID%>"><%= row.ID.toString().padStart(6, "0") %></td>
                        <td align = "center"><%= row.firstName %></td>
                        <td align = "center"><%= row.lastName %></td>
                        <td align = "center"><%= row.gender %></td>
                        <td align = "center"><%= row.ssn %></td>
                        <td align = "center"><%= row.race %></td>
                        <td align = "center"><%= row.occupation %></td>
                        <td align = "center"><%= row.address %></td>
                        <td align = "center"><%= row.state %></td>
                        <td align = "center"><%= row.city %></td>
                        <td align = "center"><%= row.company %></td>
                        <td align = "center"><%= row.email %></td>
                        <td align = "center"><%= row.phone %></td>

                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No officers found. Go <a href="/register" >here</a> to add players.</p>
    <% } %>
</div>
</div>
<div>
<form action="/logout?_method=DELETE" method="POST">
    <button type ="submit">Log Out</button>
</form>
</div>
</div>